<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <TextView
        android:id="@+id/txt_writer"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:text="username"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/ic_baseline_mode_comment_24"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="comment"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_writer" />

    <TextView
        android:id="@+id/txt_regDate"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="2000-00-00"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="@id/txt_writer"
        app:layout_constraintTop_toBottomOf="@id/txt_comment" />



</androidx.constraintlayout.widget.ConstraintLayout>